        <data_models>
            <model name="feedback" type="logical">
                <description>Modelo de datos para mensajes de retroalimentación</description>
                <entities>
                    <entity name="Mensaje">
                        <description>Mensaje enviado al candidato</description>
                        <attributes>
                            <attribute name="id" type="UUID">
                                <description>Identificador único</description>
                                <constraints>PK, NOT NULL</constraints>
                                <default_value>gen_random_uuid()</default_value>
                            </attribute>
                            <attribute name="candidato_id" type="UUID">
                                <description>Identificador del candidato</description>
                                <constraints>NOT NULL</constraints>
                            </attribute>
                            <attribute name="fecha_envio" type="TIMESTAMP">
                                <description>Fecha de envío</description>
                                <constraints>NOT NULL</constraints>
                                <default_value>NOW()</default_value>
                            </attribute>
                        </attributes>
                    </entity>
                </entities>
            </model>
        </data_models>
