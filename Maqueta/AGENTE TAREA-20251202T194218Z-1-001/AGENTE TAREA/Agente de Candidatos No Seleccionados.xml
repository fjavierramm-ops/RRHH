        <quantitative_models>
            <model name="priorización_feedback" type="scoring">
                <description>Modelo para priorizar retroalimentación según urgencia y perfil</description>
                <formula>Score = (Urgencia × 0.5) + (Perfil × 0.5)</formula>
                <variables>
                    <variable name="Urgencia">
                        <description>Tiempo desde cierre de proceso</description>
                        <range>1-5</range>
                        <unit>días</unit>
                    </variable>
                    <variable name="Perfil">
                        <description>Importancia estratégica del candidato</description>
                        <range>1-5</range>
                        <unit>puntos</unit>
                    </variable>
                </variables>
                <output>
                    <type>score</type>
                    <interpretation>Mayor score, mayor prioridad de envío</interpretation>
                    <thresholds>
                        <threshold value="4">Alta prioridad</threshold>
                        <threshold value="2">Prioridad media</threshold>
                    </thresholds>
                </output>
                <example>
                    <input>Urgencia=5, Perfil=4</input>
                    <calculation>Score = (5×0.5)+(4×0.5)=4.5</calculation>
                    <result>Alta prioridad</result>
                </example>
            </model>
        </quantitative_models>
